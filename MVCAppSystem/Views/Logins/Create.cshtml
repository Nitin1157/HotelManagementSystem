@model MVCAppSystem.Models.Login
 <link rel="stylesheet" href="~/css/loginstyle.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                @*<i class="fa fa-key" aria-hidden="true"></i>*@
                <img src="~/image/radisson-blu-logo.jpg" alt="" width="130" height="80">
            </div>
            <div class="col-lg-12 login-title">
                Register User
            </div>

            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form asp-action="Create" asp-controller="Logins">
                        <div class="form-group">
                            <label asp-for="Email" class="form-control-label">EMAIL</label>
                            <input asp-for="Email" type="text" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">PASSWORD</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">Role</label>
                            @*<select>
                                <option>
                                    Admin
                                </option>
                                <option>
                                    Staff
                                </option>
                            </select>*@
                             <input asp-for="Role" type="text" class="form-control" />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12  login-div mb-4">
                            <button type="submit" class="btn btn-outline-primary">SIGN UP</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>
