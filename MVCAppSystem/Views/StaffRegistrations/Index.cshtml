@model IEnumerable<MVCAppSystem.Models.StaffRegistration>

@{
    ViewData["Title"] = "Index";
}

<div class="">
    <h2 id="h2">Registered Staffs</h2>
    <div id="a-tag">
        <a asp-controller="StaffRegistrations" asp-action="Create" class="btn btn-primary m-2">Create New </a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-warning m-2">Back To Dashboard</a>
    </div> 
    <br />
</div>

<br />
<table class="styled-table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>*@
            <th>
                Actions
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
